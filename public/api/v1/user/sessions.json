{
  "apiVersion": "1.0",
  "swaggerVersion": "1.2",
  "basePath": "/",
  "resourcePath": "sessions",
  "apis": [
    {
      "path": "/v1/user/sessions.json",
      "operations": [
        {
          "summary": "Sign in To OnShop",
          "notes": "      Signing in should give you JWT Token.<br />\n      You should add this token to all upgoing requests\n      in header to authenticate your self!<br />\n      Header should be like this:</br>\n      <b>X-User-Token</b> your_token<br />\n      <br />\n      exp is the expiry time and you should enter it to seconds<br/>\n      Assuming we need 2 days: exp = 2 * 24 * 60 * 60<br/>\n      Default timeout is 1 week\n",
          "parameters": [
            {
              "paramType": "header",
              "name": "X-APP-Token",
              "type": "string",
              "description": "App Authentication Token",
              "required": true
            },
            {
              "paramType": "form",
              "name": "user[email]",
              "type": "string",
              "description": "User Email",
              "required": true
            },
            {
              "paramType": "form",
              "name": "user[password]",
              "type": "string",
              "description": "User Password",
              "required": true
            },
            {
              "paramType": "query",
              "name": "exp",
              "type": "integer",
              "description": "Exiration time in seconds",
              "required": false
            }
          ],
          "responseMessages": [
            {
              "code": 200,
              "responseModel": null,
              "message": "Ok"
            },
            {
              "code": 401,
              "responseModel": null,
              "message": "Unauthorized"
            },
            {
              "code": 422,
              "responseModel": null,
              "message": "Unprocessable Entity"
            }
          ],
          "nickname": "Api::V1::User::Sessions#create",
          "method": "post"
        }
      ]
    },
    {
      "path": "/v1/user/sessions/{id}.json",
      "operations": [
        {
          "summary": "Sign out",
          "parameters": [
            {
              "paramType": "header",
              "name": "X-APP-Token",
              "type": "string",
              "description": "App Authentication Token",
              "required": true
            },
            {
              "paramType": "header",
              "name": "X-User-Token",
              "type": "string",
              "description": "User Authentication Token",
              "required": true
            }
          ],
          "responseMessages": [
            {
              "code": 200,
              "responseModel": null,
              "message": "Ok"
            },
            {
              "code": 401,
              "responseModel": null,
              "message": "Unauthorized"
            }
          ],
          "nickname": "Api::V1::User::Sessions#destroy",
          "method": "delete"
        }
      ]
    }
  ],
  "authorizations": null
}